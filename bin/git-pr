#!/bin/bash

base="master"

git rev-parse origin/develop 1>/dev/null 2>/dev/null
if [ "$?" = "0" ]; then
	base="develop"
fi

if [ -n "$1" ]; then
	base="$1"
fi

branch_name="$(git rev-parse --abbrev-ref HEAD)"
head="$branch_name"

git rev-parse --abbrev-ref --symbolic-full-name @{u} 1>/dev/null 2>/dev/null
if [ $? -ne 0 ]; then
	echo "No remote branch found"
	echo -n "Push $branch_name to origin? [yN]  "
	read should_push

	if [ "$should_push" = "y" ]; then
		git push -u origin "$head"
		if [ $? -ne 0 ]; then
			exit 1
		fi
	else
		exit 1
	fi
fi


echo $base..$head
hub compare "$base..$head"

